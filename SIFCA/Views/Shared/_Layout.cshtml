<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SIFCA</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SIFCA", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Datos Comunes<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                    <li>@Html.ActionLink("Caja", "ViewCaja", "Submenu")</li>
                    <li>@Html.ActionLink("Socio", "ViewSocio", "Submenu")</li>
                    <li>@Html.ActionLink("Contabilidad", "ViewContabilidad", "Submenu")</li>
                    <li>@Html.ActionLink("Tesorería", "ViewTesoreria", "Submenu")</li>
                    <li>@Html.ActionLink("Organización", "ViewOrganizacion", "Submenu")</li>
                    <li>@Html.ActionLink("Proveedores", "ViewProveedores", "Submenu")</li>
                </ul>
                        </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Caja de Ahorros<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Ahorro", "Index", "Home")</li>
                            <li>@Html.ActionLink("Pretamos", "Index", "Home")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Tesoreria<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Banco", "Index", "Home")</li>
                            <li>@Html.ActionLink("Procesos de Pago", "Index", "Home")</li>
                            <li>@Html.ActionLink("Listar", "Index", "Home")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Contabilidad<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Asientos Contables", "Index", "Home")</li>
                            <li>@Html.ActionLink("Gestión de Periodos", "Index", "Home")</li>
                            <li>@Html.ActionLink("Reportes Contables", "Index", "Home")</li>
                            <li>@Html.ActionLink("Indices Financieros", "Index", "Home")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Gerencia<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Estadistica", "Index", "Home")</li>
                            <li>@Html.ActionLink("Auditoria", "Index", "Home")</li>
                            <li>@Html.ActionLink("Presupuestos", "Index", "Home")</li>
                            <li>@Html.ActionLink("Notificaciones", "Index", "Home")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Herramientas<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Usuario", "Index", "Home")</li>
                            <li>@Html.ActionLink("Respaldo", "Index", "Home")</li>
                            <li>@Html.ActionLink("Auditoria", "Index", "Home")</li>
                            <li>@Html.ActionLink("Intercambio de Datos", "Index", "Home")</li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SIFCA</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
